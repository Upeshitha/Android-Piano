<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Piano" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- This style will be used for the foremost key of the piano -->
    <style name="first_key_style_for_pink_key" >
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <!--Custom Drawable file-->
        <item name="android:background">@drawable/pressed_and_normal_selector</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>

    </style>

    <!--This style will used by reset of the piano keys that are of Pink colors-->
    <style name="common_key_style_for_reset_of_the_piano_keys">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <!--Custom Drawable file-->
        <item name="android:background">@drawable/pressed_and_normal_selector</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>

    </style>

    <!--This will be used for TextViews like C3,D3,E3,G3,A3,B3-->
